{
  "_id": "play_break_graduation_system_v1",
  "purpose": "Graduate students from play breaks for concentration → rewards for completion → praise only",
  
  "graduationSequence": {
    "stage1_concentrationBreaks": {
      "description": "Play breaks due to limited concentration capacity",
      "ageTypical": "5-9 years, or older students with developmental lag",
      "trigger": "Time-based or concentration fatigue",
      "structure": {
        "workDuration": "3-10 minutes depending on age/capacity",
        "breakDuration": "2-5 minutes",
        "breakType": "Free play, movement, game access",
        "frequency": "Every 5-15 minutes of focused work"
      },
      "rationale": "Students genuinely cannot sustain longer focus - breaks are developmental necessity",
      "transitionIndicator": "Can sustain focus beyond work duration without break prompt"
    },
    
    "stage2_rewardBreaks": {
      "description": "Play breaks earned as reward for task completion",
      "ageTypical": "9-14 years, or stage 1 students progressing",
      "trigger": "Task completion (not time)",
      "structure": {
        "workDuration": "Complete specific task (10-30 minutes)",
        "breakDuration": "5 minutes game access",
        "breakType": "Game code unlock, choice activity",
        "frequency": "Per task or milestone"
      },
      "rationale": "Build work-reward association, extend concentration capacity",
      "transitionIndicator": "Completes tasks without needing reward mention, intrinsic motivation emerging"
    },
    
    "stage3_examPeriodRewards": {
      "description": "Rewards for sustained work sessions, especially during high-stakes periods",
      "ageTypical": "14+ years, or stage 2 students progressing",
      "trigger": "Extended work session or exam preparation",
      "structure": {
        "workDuration": "45-60 minutes focused work",
        "breakDuration": "10-15 minutes",
        "breakType": "Student choice (game, chat, movement)",
        "frequency": "After extended sessions only"
      },
      "rationale": "Support during intensive periods, acknowledge sustained effort",
      "transitionIndicator": "Self-regulates breaks, works for intrinsic goals"
    },
    
    "stage4_praiseOnly": {
      "description": "No external rewards, praise and intrinsic motivation primary",
      "ageTypical": "Mature students (16+), or earlier if intrinsically motivated",
      "trigger": "No external triggers - self-directed work",
      "structure": {
        "workDuration": "Self-determined",
        "breaks": "Self-regulated",
        "recognition": "Verbal/written praise, acknowledgment of growth",
        "rewards": "None - intrinsic motivation sustains work"
      },
      "rationale": "Goal state - working for learning, mastery, achievement",
      "maintenance": "Occasional praise, celebrate milestones"
    }
  },
  
  "transitionCriteria": {
    "stage1to2": {
      "indicators": [
        "Sustains focus for 15+ minutes without break prompt",
        "Completes tasks before break time",
        "Requests to continue working past break time",
        "Shows frustration with frequent breaks"
      ],
      "method": "Gradually extend work duration, reduce break frequency",
      "timeline": "3-6 months typical"
    },
    
    "stage2to3": {
      "indicators": [
        "Completes tasks without reward mention",
        "Self-initiates work regularly",
        "Shows interest in topic/learning",
        "Asks questions beyond minimum required",
        "Reward becomes supplemental, not primary driver"
      ],
      "method": "Gradually increase work required per reward, introduce intrinsic motivators",
      "timeline": "6-12 months typical"
    },
    
    "stage3to4": {
      "indicators": [
        "Consistently works for intrinsic goals",
        "Self-regulates breaks without prompting",
        "Seeks challenges for mastery, not rewards",
        "Pride in achievement evident",
        "Praise sufficient reinforcement"
      ],
      "method": "Phase out external rewards, maintain verbal recognition",
      "timeline": "Variable - some students reach this, others don't"
    }
  },
  
  "regressionHandling": {
    "triggers": [
      "Stress periods (exams, life events)",
      "Difficult content (beyond current capacity)",
      "Motivation dip",
      "External factors (home issues, health)"
    ],
    "response": "Temporarily return to earlier stage, rebuild, progress again",
    "principle": "Non-linear development - setbacks are normal"
  },
  
  "aiImplementation": {
    "stageDetection": {
      "method": "Track work duration tolerance, self-initiation rate, reward dependency",
      "indicators": [
        "Average work duration before fatigue",
        "Percentage of self-initiated work",
        "Response to reward vs. praise",
        "Task completion without reward mention"
      ]
    },
    
    "automaticGraduation": {
      "trigger": "Student consistently exceeds current stage criteria",
      "method": "Gradual extension of work requirements",
      "messaging": "Celebrate growth: 'You're getting really good at focusing! Let's try a slightly longer challenge.'",
      "monitoring": "Track for regression, adjust if needed"
    }
  }
