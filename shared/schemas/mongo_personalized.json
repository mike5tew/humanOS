  "corePhilosophy": {
    "name": "Chaos Surfing Educational Paradigm",
    "summary": "Channel student energy through productive chaos to emergent engagement",
    "fundamentalPrinciple": "Chaos is a developmental stage between compliance and genuine engagement",
    
    "traditionalVsTransformative": {
      "traditional": {
        "goal": "Maintain order and control",
        "method": "Suppress student energy into compliance",
        "outcome": "Surface compliance with potential thinking atrophy"
      },
      "transformative": {
        "goal": "Channel student energy into engagement",
        "method": "Guide energy through structured chaos",
        "outcome": "Independent thinking and self-motivation",
        "evidenceIndicators": ["student-led collaboration", "peer tutoring", "voluntary engagement"]
      }
    }
  },
  
  "theoreticalFoundation": {
    "etpFramework": {
      "name": "Evolutionary Trigger Profiles (ETP)",
      "description": "Core motivational drivers in learning contexts",
      "categories": [
        "safety", "belonging", "status", "autonomy", "competence",
        "curiosity", "achievement", "control_need", "frustration_tolerance"
      ]
    },
    
    "routineDependencyTrap": {
      "description": "Over-reliance on external structure inhibits independent thinking",
      "mechanism": "Extended compliance training → reduced self-direction capacity",
      "intervention": "Gradual autonomy building with voltage management"
    },
    
    "brainStateModel": {
      "primalLevel": "Survival responses - fight/flight/freeze",
      "emotionalLevel": "Feeling-dominated states",
      "rationalLevel": "Cognitive engagement mode",
      "interventionPrinciple": "Address primal/emotional states before cognitive engagement"
    }
  },
  
  "implementationArchitecture": {
    "phaseSequence": [
      {
        "phase": 1,
        "name": "Emotional Grounding",
        "goal": "Establish psychological safety and reduce threat perception",
        "techniques": [
          "Strategic care signaling",
          "Normalization of academic struggle",
          "Safe-to-fail environment creation",
          "Frequent positive recognition"
        ]
      },
      {
        "phase": 2,
        "name": "Confidence Building",
        "goal": "Develop self-efficacy through success experiences",
        "techniques": [
          "Micro-autonomy injection",
          "Guaranteed micro-successes",
          "Mistake reframing as learning opportunities",
          "Disproportionate praise for small wins"
        ]
      },
      {
        "phase": 3,
        "name": "Autonomy Development",
        "goal": "Build independent thinking and self-direction",
        "techniques": [
          "Gradual responsibility transfer",
          "Holistic knowledge extension",
          "Peer-led collaboration",
          "Self-assessment skill development"
        ]
      }
    ],
    
    "ongoingStrategies": {
      "criticalMassDynamics": {
        "description": "Leverage group momentum rather than individual motivation",
        "threshold": "~40% engagement creates positive peer pressure",
        "maintenance": "Momentum preservation through minimal intervention"
      },
      
      "structuredChaosManagement": {
        "productiveIndicators": [
          "Student-led discussion of content",
          "Collaborative problem-solving",
          "Multiple solution approaches",
          "Peer teaching emergence"
        ],
        "interventionTriggers": [
          "Engagement drops below 30%",
          "Purely social (non-academic) conversation dominates",
          "Bullying or exclusion behaviors"
        ]
      }
    }
  },
  
